<UserControl x:Class="ListBoxDemo.Controls.DatabaseTypeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ListBoxDemo.Controls"
             mc:Ignorable="d" Width="150" Height="48">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Image x:Name="dbImg" Width="40" Height="48" Margin="15,0,0,0"></Image>
            <TextBlock x:Name="dbNameTxt" Margin="15,0,0,0" VerticalAlignment="Center"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
